%header.pc-header.visible-pc
  .pc-header-inner
    .clearfix
      %h1.l-left
        =link_to '/' do
          = image_tag "logo.svg", :height => "36", :width => "134", alt:"mercari"
      = search_form_for @q, url: search_products_path , class: 'pc-header-inner__form l-right' do |f|
        =f.text_field :name_cont,class: "input-default",placeholder: "キーワードから探す"
        = button_tag type:'submit', class: 'icon',id: 'sbtn2' do
          = fa_icon 'search'
    .pc-header-nav.clearfix
      %nav.l-left
        %ul.pc-header-nav__box
          %li
            %h2
              =link_to 'カテゴリーから探す', '', class: 'pc-header-nav__root'
          %li
            %h2
              =link_to 'ブランドから探す', '', class: 'pc-header-nav__root'
      .l-right
        %ul.pc-header-nav__login
          - if user_signed_in?
            %li.header-nav__my
              = link_to 'マイページ', "/users/#{current_user.id}"
            %li.header-nav__my
              = link_to 'お知らせ', "/users/:id"
            %li.header-nav__my
              = link_to 'やることリスト', "/users/:id"
          - else
            %li
              = link_to 'ログイン', new_user_session_path, method: :get, class: 'sp-header-btn button btn-red'
            %li
              = link_to '新規会員登録', signup_path , class: 'sp-header-btn button header-signup'

